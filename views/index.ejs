<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title><%= locals.title %></title>

    <link rel="stylesheet" href="/node_modules/devextreme/dist/css/dx.light.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Welcome to <%= locals.title %></h1>
            <p>Hello, <%= user %>!</p>
        </div>

        <div class="component-section">
            <h2 class="section-title">DataGrid</h2>
            <div id="dataGrid"></div>
        </div>

        <!-- Charts Section -->
        <div class="component-section">
            <h2 class="section-title">Charts</h2>
            <div class="chart-container" id="chartBar"></div>
            <div class="chart-container" id="chartPie"></div>
        </div>

        <!-- Form Section -->
        <div class="component-section">
            <h2 class="section-title">Form</h2>
            <div id="form"></div>
        </div>

        <div id="loadPanel"></div>

        <!-- Dashboard Cards -->
        <div class="dashboard-container">
            <div class="card">
                <div id="gauge"></div>
            </div>
            <div class="card">
                <div id="pivotGrid"></div>
            </div>
        </div>
    </div>
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn3.devexpress.com/jslib/23.1.3/js/dx.all.js"></script>
    <script src="/js/scripts.js"></script>
</body>
</html>